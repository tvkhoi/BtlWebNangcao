@model BtlWebNangCao.ViewModels.PhongChatViewModel;
@{
    ViewData["Title"] = "Thêm phòng chat";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm phòng mới</h2>

<form asp-action="Create" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label asp-for="sTieuDe"></label>
        <input asp-for="sTieuDe" class="form-control" />
        <span asp-validation-for="sTieuDe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sMoTa"></label>
        <textarea asp-for="sMoTa" class="form-control"></textarea>
        <span asp-validation-for="sMoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="bLaCongKhai"></label>
        <select asp-for="bLaCongKhai" class="form-control">
            <option value="true">Công khai</option>
            <option value="false">Riêng tư</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
