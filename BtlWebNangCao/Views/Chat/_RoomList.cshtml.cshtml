<div class="d-flex flex-column h-100">
    <div class="p-3 bg-primary text-white">
        <h4>Ứng dụng trò chuyện</h4>
        <div class="d-flex justify-content-between align-items-center">
            <span>Xin chào, @User.Identity.Name</span>
            <a href="/Account/Logout" class="text-white"><i class="bi bi-box-arrow-right"></i></a>
        </div>
    </div>
    <div class="p-3 border-bottom">
        <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#createRoomModal">
            <i class="bi bi-plus-circle"></i> Tạo phòng
        </button>
    </div>
    <div class="flex-grow-1 overflow-auto">
        <div class="list-group list-group-flush">
            @foreach (var room in Model.Rooms)
            {
                <a href="#" class="list-group-item list-group-item-action room-item @(room.Id == Model.CurrentRoomId ? "active" : "")"
                   data-room-id="@room.Id">
                    <div class="d-flex justify-content-between">
                        <span>@room.Title</span>
                        <span class="badge bg-primary rounded-pill">@room.UserCount</span>
                    </div>
                    <small class="text-muted">@(room.IsPublic ? "Phòng công cộng" : "Phòng riêng tư")</small>
                </a>
            }
        </div>
    </div>
</div>