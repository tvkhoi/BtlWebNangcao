<div class="d-flex flex-column h-100">
    <div class="p-3 border-bottom">
        <h5 class="mb-0">Người dùng trực tuyến</h5>
        <small class="text-muted">@Model.OnlineUsers.Count người đang hoạt động</small>
    </div>
    <div class="overflow-auto flex-grow-1">
        @foreach (var user in Model.OnlineUsers)
        {
            <div class="user-item p-2 border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="@(user.IsCurrentUser ? "fw-bold" : "")">@user.UserName</span>
                    @if (user.IsAdmin)
                    {
                        <span class="badge bg-danger rounded-pill">Admin</span>
                    }
                    else if (user.IsCurrentUser)
                    {
                        <span class="badge bg-success rounded-pill">Online</span>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-primary invite-btn" data-user-id="@user.Id">
                            Mời
                        </button>
                    }
                </div>
            </div>
        }
    </div>
</div>